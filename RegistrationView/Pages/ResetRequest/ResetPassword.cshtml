@page
@model RegistrationView.Pages.ResetRequest.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="EmailAddress">Email Address</label>
        <input type="email" class="form-control" id="EmailAddress" name="Input.EmailAddress" required />
    </div>

    <div class="form-group">
        <label for="Password">New Password</label>
        <input type="password" class="form-control" id="Password" name="Input.Passwords" required />
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Confirm New Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="Input.ConfirmPassword" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Reset Password</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}
